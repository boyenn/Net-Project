<UserControl x:Class="NETProject.BinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="575" d:DesignWidth="130">
    <Grid>
        <Image x:Name="wasteBinImage" HorizontalAlignment="Left" Height="200" Margin="0,375,0,0" VerticalAlignment="Top" Width="130" Panel.ZIndex="2"/>
        <Canvas x:Name="dropWasteCanvas" HorizontalAlignment="Left" Height="575" VerticalAlignment="Top" Width="130" Background="Transparent" Panel.ZIndex="1"/>
        <Label x:Name="wasteLabel" Content="" HorizontalAlignment="Center" Margin="0, 380, 0, 0" Height="25" Panel.ZIndex="3" FontWeight="Bold" Background="White" FontSize="10"/>
    </Grid>
</UserControl>
